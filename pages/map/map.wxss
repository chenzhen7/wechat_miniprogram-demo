/* index.wxss */
.container {
  width: 100%;
  height: 100%;
}

.button-container {
  position: fixed;
  bottom: 20px;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
}

.photo-button {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  background-color: #fff;
}

.preview-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 120px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.preview-photo {
  width: 100%;
  height: 100%;
  object-fit: contain;
}
